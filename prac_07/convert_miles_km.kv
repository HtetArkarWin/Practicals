BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            multiline: False
            font_size: 48
            text: ''
            on_text: app.handle_user_input(user_input.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x:0.2
            Button:
                text: 'Up'
                on_press: app.handle_increment(user_input.text,1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(user_input.text,-1)
    #Button:
    #    text: 'Convert m to km'
    #    on_press: app.handle_convert(user_input.text)
    Label:
        text: app.message
        font_size: 30

